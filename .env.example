# ALIMS Environment Configuration
# Copy this file to .env and customize as needed

# Database Configuration
DB_PASSWORD=alimsdev
DATABASE_URL=postgresql://alims:alimsdev@postgres:5432/alims

# Redis Configuration
REDIS_URL=redis://redis:6379

# Service URLs
WORKFLOW_SERVICE_URL=http://workflow-manager:8002
PREDICATE_LOGIC_SERVICE_URL=http://predicate-logic-engine:8001

# Monitoring Configuration
GRAFANA_PASSWORD=admin
PROMETHEUS_URL=http://prometheus:9090

# Logging Configuration
LOG_LEVEL=INFO
ELASTICSEARCH_URL=http://elasticsearch:9200

# Security Configuration
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_PREFIX=/api/v1
DOCS_URL=/docs
OPENAPI_URL=/openapi.json

# Vector Database Configuration
VECTOR_DB_URL=http://vector-db:6333

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=20

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_EXPECTED_RECOVERY_TIME=10

# Development vs Production
ENVIRONMENT=development
DEBUG=true
